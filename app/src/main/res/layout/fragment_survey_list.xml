<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="kaist.iclab.abclogger.ui.Status" />
        <import type="android.text.TextUtils" />
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="kaist.iclab.abclogger.ui.surveylist.SurveyListViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:id="@+id/txt_response_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_header_background"
                android:paddingLeft="@dimen/item_default_horizontal_padding"
                android:paddingTop="@dimen/item_default_horizontal_padding"
                android:paddingRight="@dimen/item_default_horizontal_padding"
                android:paddingBottom="@dimen/item_default_horizontal_padding"
                android:text="@{viewModel.responseRates}"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/txt_size_text"
                android:textStyle="italic|bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_error"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingStart="@dimen/item_space_horizontal"
                    android:paddingEnd="@dimen/item_space_horizontal"
                    android:text="@string/msg_fail_to_load_contents"
                    android:textSize="@dimen/txt_size_text"
                    android:visibility="@{viewModel.initStatus.failed ? View.VISIBLE : View.GONE}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </FrameLayout>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>

