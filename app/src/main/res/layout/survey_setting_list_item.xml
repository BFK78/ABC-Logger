<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.webkit.URLUtil"/>
        <variable
            name="item"
            type="kaist.iclab.abclogger.collector.survey.SurveySettingItem"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:error="@{(URLUtil.isValidUrl(item.url) || item.url.length() == 0) ? null : @string/setting_survey_collector_url_error}"
            app:errorEnabled="@{(URLUtil.isValidUrl(item.url) == false &amp;&amp; item.url.length() != 0)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_remove_item">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={item.url}"
                android:hint="@string/setting_survey_collector_url_hint" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_remove_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toStartOf="@id/btn_preview"
            app:layout_constraintBottom_toBottomOf="@id/text_input_layout"
            tools:src="@drawable/baseline_remove_black_36" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_preview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toRightOf="@id/btn_remove_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/text_input_layout"
            tools:src="@drawable/baseline_pageview_black_36" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>