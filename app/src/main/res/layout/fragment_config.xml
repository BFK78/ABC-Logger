<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="kaist.iclab.abclogger.ui.config.ConfigViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/load_progress_bar"
            style="?android:progressBarStyleHorizontal"
            isLoading="@{viewModel.loadStatus.loading}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/progress_bar_horizontal_height"
            android:layout_marginTop="@dimen/progress_bar_horizontal_margin_vertical"
            android:layout_marginBottom="@dimen/progress_bar_horizontal_margin_vertical"
            android:layout_gravity="top"
            android:indeterminate="true" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>
</layout>
