<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="kaist.iclab.abclogger.ui.config.ConfigViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- General Config -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/item_default_padding"
                android:paddingTop="@dimen/item_default_padding"
                android:paddingRight="@dimen/item_default_padding"
                android:text="@string/config_category_general"
                android:textColor="@color/color_message"
                android:textSize="@dimen/txt_size_title_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <kaist.iclab.abclogger.ui.config.SimpleConfigView
                    description="@{viewModel.userName}"
                    header="@{@string/config_title_user_name}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <kaist.iclab.abclogger.ui.config.SimpleConfigView
                    description="@{viewModel.email}"
                    header="@{@string/config_title_email}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <kaist.iclab.abclogger.ui.config.SimpleSwitchConfigView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    header="@{@string/config_title_upload_setting}"
                    description="@{@string/config_desc_upload_setting}"
                    checked="@{viewModel.shouldUploadForNonMeteredNetwork}"/>

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <kaist.iclab.abclogger.ui.config.SimpleConfigView
                    description="@{viewModel.lastSyncTime}"
                    header="@{@string/config_title_sync}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <kaist.iclab.abclogger.ui.config.SimpleConfigView
                    description="@{viewModel.sizeOfDb}"
                    header="@{@string/config_title_size_of_data}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <!-- Data Configuration -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/item_default_padding"
                android:paddingTop="@dimen/item_default_padding"
                android:paddingRight="@dimen/item_default_padding"
                android:text="@string/config_category_collector"
                android:textColor="@color/color_message"
                android:textSize="@dimen/txt_size_title_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Activity -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusActivity.hasStarted}"
                    description="@{@string/data_desc_physical_activity}"
                    error="@{viewModel.statusActivity.available}"
                    header="@{@string/data_name_physical_activity}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- App usage -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusAppUsage.hasStarted}"
                    description="@{@string/data_desc_app_usage}"
                    error="@{viewModel.statusAppUsage.available}"
                    header="@{@string/data_name_app_usage}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Battery -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusBattery.hasStarted}"
                    description="@{@string/data_desc_battery}"
                    error="@{viewModel.statusBattery.available}"
                    header="@{@string/data_name_battery}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Bluetooth -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusBluetooth.hasStarted}"
                    description="@{@string/data_desc_bluetooth}"
                    error="@{viewModel.statusBluetooth.available}"
                    header="@{@string/data_name_bluetooth}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Call log -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusCallLog.hasStarted}"
                    description="@{@string/data_desc_call_log}"
                    error="@{viewModel.statusCallLog.available}"
                    header="@{@string/data_name_call_log}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Data traffic -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusDataTraffic.hasStarted}"
                    description="@{@string/data_desc_traffic}"
                    error="@{viewModel.statusDataTraffic.available}"
                    header="@{@string/data_name_traffic}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Device event -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusDeviceEvent.hasStarted}"
                    description="@{@string/data_desc_device_event}"
                    error="@{viewModel.statusDeviceEvent.available}"
                    header="@{@string/data_name_device_event}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Installed app -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusInstalledApp.hasStarted}"
                    description="@{@string/data_desc_installed_app}"
                    error="@{viewModel.statusInstalledApp.available}"
                    header="@{@string/data_name_installed_app}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Key track -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusKeyTracking.hasStarted}"
                    description="@{@string/data_desc_key_track}"
                    error="@{viewModel.statusKeyTracking.available}"
                    header="@{@string/data_name_key_track}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Location -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusLocation.hasStarted}"
                    description="@{@string/data_desc_location}"
                    error="@{viewModel.statusLocation.available}"
                    header="@{@string/data_name_location}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Media -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusMedia.hasStarted}"
                    description="@{@string/data_desc_media}"
                    error="@{viewModel.statusMedia.available}"
                    header="@{@string/data_name_media}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Message -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusMessage.hasStarted}"
                    description="@{@string/data_desc_message}"
                    error="@{viewModel.statusMessage.available}"
                    header="@{@string/data_name_message}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Notification -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusNotification.hasStarted}"
                    description="@{@string/data_desc_notification}"
                    error="@{viewModel.statusNotification.available}"
                    header="@{@string/data_name_notification}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Physical status -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusPhysicalStatus.hasStarted}"
                    description="@{@string/data_desc_physical_status}"
                    error="@{viewModel.statusPhysicalStatus.available}"
                    header="@{@string/data_name_physical_status}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Polar H10 -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusPolarH10.hasStarted}"
                    description="@{@string/data_desc_polar_h10}"
                    error="@{viewModel.statusPolarH10.available}"
                    header="@{@string/data_name_polar_h10}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Survey -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusSurvey.hasStarted}"
                    description="@{@string/data_desc_survey}"
                    error="@{viewModel.statusSurvey.available}"
                    header="@{@string/data_name_survey}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <!-- Physical status -->
                <kaist.iclab.abclogger.ui.config.DataConfigView
                    checked="@{viewModel.statusWifi.hasStarted}"
                    description="@{@string/data_desc_wifi}"
                    error="@{viewModel.statusWifi.available}"
                    header="@{@string/data_name_wifi}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

        <!-- Others -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/item_default_padding"
                android:paddingTop="@dimen/item_default_padding"
                android:paddingRight="@dimen/item_default_padding"
                android:text="@string/config_category_others"
                android:textColor="@color/color_message"
                android:textSize="@dimen/txt_size_title_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <kaist.iclab.abclogger.ui.config.SimpleConfigView
                    description="@{@string/config_desc_flush_data}"
                    header="@{@string/config_title_flush_data}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <kaist.iclab.abclogger.ui.Divider
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <kaist.iclab.abclogger.ui.config.SimpleConfigView
                    description="@{@string/config_desc_logout}"
                    header="@{@string/config_title_logout}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
